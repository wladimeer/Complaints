<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="#FDB895"
    tools:ignore="NewApi"
>

    <item >
        <shape android:shape="rectangle">
            <solid android:color="#F26824" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F26824"
                android:endColor="#FDB895"
                android:type="linear"
                android:angle="90"
            />

            <corners android:radius="8dp" />
        </shape>
    </item>

</ripple>